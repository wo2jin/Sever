<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Register</title>

<script src="jquery-3.5.1.js">
	$(document).ready(function(){
		alert("test");
		$("button").click(function(){
			if($("#userId").val()==""){
				alert("아이디를 입력해주세요.");
				$("#userId").focus();
				return false;
			}
			if($("#userPwd").val()==""){
				alert("암호를 입력해주세요.");
				$("#userPwd").focus();
				return false;
			}
			var userPwd = $("#userPwd").val();
			var userPwdConfirm = $("userPwdConfirm").val();
			if(userPwd != userPwdConfirm)){
				alert("암호가 일치하지 않습니다..");
				$("#userPwdConfirm").focus();
				return false;
			}
			
			
			return false;
		});
	});
</script>
</head>
<body>
	<form action = "loginProcess" method="post" id="myForm">
		<table border ="0">
			<tr>
				<td>아이디 :</td>
				<td><input type = "text" name= "userId" id = "userId"></td>
			</tr>
			<tr>
				<td>암호 :</td>
				<td><input type = "password" name= "userPwd" id = "userPwd"></td>
			</tr>
			<tr>
				<td>암호확인 :</td>
				<td><input type = "password" name= "userPwdcheck" id = "userPwdcheck"></td>
			</tr>
			<tr>
				<td>남녀구분 :</td>
				<td>
				 남 <input type = "radio" name =  "gender" id= "male">
				 여 <input type = "radio" name =  "gender" id= "female">
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<button>가입</button>
					<input type= "reset" value = "초기화">
				</td>
			<tr>
		</table>
	</form>

</body>
