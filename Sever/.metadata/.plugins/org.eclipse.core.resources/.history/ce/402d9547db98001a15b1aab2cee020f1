<script src="jquery-3.5.1.js">
	$(document).ready(fucntion(){
		$("button").onclick(funtion(){
			if(&("#userId").val()==""){
				alert("아이디를 입력하세요.");
				$("#userId").focus();
				return false;
			}
			if(&("#userPwd").val()==""){
				alert("비밀번호를 입력하세요.");
				$("#userPwd").focus();
				return false;
			}
		});
	});
</script>
