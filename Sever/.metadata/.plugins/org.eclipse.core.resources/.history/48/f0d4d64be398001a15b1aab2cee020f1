<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Register</title>

<script>
	function CheckForm(){
		var userId = document.getElementById("userId").value;
		var userPwd = document.getElementById("userPwd").value;
		var userPwdcheck = document.getElementById("userPwdcheck").value;
		var gender = document.getElementsByName("gender");
		if(userId ==""){
			alert("아이디를 입력하세요.");
			return false;
		}
		if(userPwd ==""){
			alert("비밀번호를 입력하세요.");
			return false;
		}
		if(userPwdcheck ==""){
			alert("비밀번호가 같지 않습니다.");
			return false;
		}
		if(userPwdcheck !=userPwd){
			alert("비밀번호가 같지 않습니다.");
			return false;
		}
		
		var checkCount=0;
		for(var jnx=0;  jnx<gender.length; jnx++){
			if(gender[jnx].checked == true){
				checkCount++;
			}
		}
		if(checkCount == 0){
			alert("성별을 선택해 주세요.");
			return false;
		}
		if(userId =="test"&&userPwd=="1234"&&userPwdcheck==userPwd){
			document.getElementById("myForm").submit();
		}else{
			alert("아이디와 비밀번호가 틀립니다.");
			return false;
		}
	}
</script>
</head>
<body>
	<form action = "loginProcess" method="post" id="myForm">
		<table border ="0">
			<tr>
				<td>아이디 :</td>
				<td><input type = "text" name= "userId" id = "userId"></td>
			</tr>
			<tr>
				<td>암호 :</td>
				<td><input type = "password" name= "userPwd" id = "userPwd"></td>
			</tr>
			<tr>
				<td>암호확인 :</td>
				<td><input type = "password" name= "userPwdcheck" id = "userPwdcheck"></td>
			</tr>
			<tr>
				<td>남녀구분 :</td>
				<td>
				 남 <input type="radio" name ="gender" id= "male">
				 여 <input type="radio" name ="gender" id= "female">
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<input type="button" value ="가입" onclick="CheckForm();">
					<input type= "reset" value = "초기화">
				</td>
			<tr>
		</table>
	</form>

</body>
</html>